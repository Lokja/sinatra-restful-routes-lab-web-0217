<title>Grandma's Recipes</title>
<body>
  <h1>Grandma's Recipes</h1>
  <h2>Edit Yo Recipe!</h2>
  <form action="/recipes/<%= @recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Edit Name: <input type="text" name="name" value="<%= @recipe.name %>"><br>
    Edit ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br>
    Edit Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br>
    <input type="submit" value="submit">
  </form>
</body>
