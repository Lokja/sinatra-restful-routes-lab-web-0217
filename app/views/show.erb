<title>Grandma's Recipes</title>
<body>
  <h1>Grandma's Recipes</h1>
  <h2>Viewing Recipe <%= @recipe.id %>!</h2>
    <%= "Recipe name: #{@recipe.name}" %><br>
    <%= "Recipe ingredients: #{@recipe.ingredients}" %><br>
    <%= "Recipe cook time: #{@recipe.cook_time}" %><br>
    <form method="post" action="/recipes/<%= @recipe.id %>/delete">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
</body>
