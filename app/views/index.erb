<title>Grandma's Recipes</title>
<body>
  <h1>Grandma's Recipes</h1>
  <h2>View Yo Recipes!</h2>
    <% Recipe.all.each do |recipe| %>
      <%= "Recipe name: #{recipe.name}" %><br>
      <%= "Recipe ingredients: #{recipe.ingredients}" %><br>
      <%= "Recipe cook time: #{recipe.cook_time}" %><br>
      <a href="/recipes/<%= recipe.id %>">Go to recipe</a><br>
      <br>
    <% end %>
</body>
